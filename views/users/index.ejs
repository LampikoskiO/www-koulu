<h2 class="center">Users Table</h2>
<div class="center">
  <a class="button" href="/users/new">Create User</a>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(user => { %>
    <tr>
      <td>
        <a href="<%=`/users/${user.id}`%>">
          <%= user.fullName %>
        </a>
      </td>
      <td>
        <%= user.email %>
      </td>
      <td>
        <a href="<%=`/users/${user.id}/edit`%>">
          Edit
        </a>
      </td>
      <td>
        <form method="POST" action="<%=`/users/${user.id}/delete?_method=DELETE`%>" onsubmit="return confirm('Are you sure you want to delete this user?')">
          <button>Delete</button>
        </form>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
