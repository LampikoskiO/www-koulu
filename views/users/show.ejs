<!DOCTYPE html>
<html>
  <%- include('../partials/navbar') %>

    <link rel="stylesheet" href="/styles.css">
    
    <h1 class="center">User Data for
  <%= user.fullName %>
</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <td>
      <%= user.fullName %>
    </td>
  </tr>
  <tr>
    <th>Email</th>
    <td>
      <%= user.email%>
    </td>
  </tr>
</table>

<% } %>
<div>
  <form action="<%= `/users/${user.id}/edit` %>" method="GET" style="display: inline;">
    <button type="submit" class="button">Edit User Details</button>
  </form>

  <form action="<%= `/users/${user.id}/delete?_method=DELETE` %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this record?')">
    <button type="submit" class="button">Delete</button>
  </form>
</div>
<div>
  <a class="button" href="/users">View all users</a>
</div>
</html>